<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/blue</item>
    </style>


    <style name="layoutBorder" parent="Theme.AppCompat.Light">
        <item name="android:background">@drawable/border</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="group" parent="Theme.MaterialComponents.Light">
        <item name="popupMenuBackground">@android:color/holo_purple</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="single" parent="Theme.MaterialComponents.Light">
        <item name="popupMenuBackground">@android:color/holo_blue_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="sms" parent="Theme.MaterialComponents.Light">
        <item name="popupMenuBackground">@android:color/holo_orange_dark</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="TextAppearance">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="actionMenuTextColor">@color/black</item>
        <item name="android:actionMenuTextColor">@color/black</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="DatePickerStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/purple</item>
        <item name="android:headerBackground">@color/lightBlue</item>
        <item name="android:numbersBackgroundColor">@color/lightestBlue</item>
        <item name="android:numbersSelectorColor">@color/lightBlue</item>
        <item name="android:numbersTextColor">@color/blue</item>
        <item name="android:numbersInnerTextColor">@color/blue</item>

    </style>
</resources>