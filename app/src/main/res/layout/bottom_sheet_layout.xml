<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/lightBlue"
    android:orientation="vertical"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/locationFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:foregroundGravity="center"
            android:backgroundTint="@color/blue"
            android:foreground="@drawable/location_white"
            android:contentDescription="@string/location"
            android:layout_weight="1"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/cameraFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:foregroundGravity="center"
            android:backgroundTint="@color/blue"
            android:foreground="@drawable/ic_baseline_camera_alt_white"
            android:contentDescription="@string/camera"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/galleryFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:foregroundGravity="center"
            android:backgroundTint="@color/blue"
            android:foreground="@drawable/ic_baseline_insert_photo_white"
            android:contentDescription="@string/gallery"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/delayFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:foregroundGravity="center"
            android:backgroundTint="@color/blue"
            android:foreground="@drawable/ic_baseline_access_time_white"
            android:contentDescription="@string/delay"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/contactFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:foregroundGravity="center"
            android:backgroundTint="@color/blue"
            android:foreground="@drawable/ic_baseline_contacts_24"
            android:contentDescription="@string/contact"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/chuckBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:foregroundGravity="center"
            android:backgroundTint="@color/blue"
            android:foreground="@drawable/cns"
            android:contentDescription="@string/contact"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            />


