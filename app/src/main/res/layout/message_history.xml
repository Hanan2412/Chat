<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/messagesDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:text="messageDate"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/messagesDate"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/seenBy"
        android:text="this is message"
        android:textSize="30sp" />

    <ImageView
        android:id="@+id/seenBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/message"
        android:layout_alignParentEnd="true"
        android:contentDescription="readBy"
        android:src="@drawable/ic_baseline_done_24" />
</RelativeLayout>